server {
    listen 80;
    listen [::]:80;

    server_name maven.mohistmc.com www.maven.mohistmc.com;

    root /var/www/maven;
    index index.html index.htm index.php;

    location / {
        autoindex on;
        try_files $uri $uri/ =404;
    }

    location /.git {
        deny  all;
    }

    add_header Access-Control-Allow-Origin "*";
}