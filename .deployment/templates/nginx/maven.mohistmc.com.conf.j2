server {
    listen 80;
    listen [::]:80;

    server_name {{ app_url }} www.{{ app_url }};

    root {{ app_path }};
    index index.html index.htm index.php;

    location / {
        autoindex on;
        try_files $uri $uri/ =404;
    }

    location /.git {
        deny  all;
    }

    add_header Access-Control-Allow-Origin "*";
}